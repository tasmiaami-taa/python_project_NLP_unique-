def is_leap_year(year):
    if year % 4 != 0:
        return False
    elif year % 100 != 0:
        return True
    else:
        return year % 400 == 0

# Test the function
print("Is 2000 a leap year?", is_leap_year(2000))
print("Is 1900 a leap year?", is_leap_year(1900))
print("Is 2024 a leap year?", is_leap_year(2024))
